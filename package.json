{
  "name": "kota",
  "version": "1.0.0",
  "description": "my chef app",
  "workspaces": [
    "frontend",
    "backend"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev --prefix client\" \"npm run dev --prefix server\"",
    "build": "npm run build --prefix client && npm run build --prefix server",
    "start": "npm run start --prefix server && serve -s client/dist",
    "client:dev": "npm run dev --prefix client",
    "server:dev": "npm run dev --prefix server",
    "client:build": "npm run build --prefix client",
    "server:build": "npm run build --prefix server",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/thullyDev/kota.git"
  },
  "author": "thullyDev",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/thullyDev/kota/issues"
  },
  "homepage": "https://github.com/thullyDev/kota#readme",
  "devDependencies": {
    "concurrently": "^9.0.1"
  }
}
